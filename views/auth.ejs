<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Login or Register | Elder</title>
  <link rel="icon" type="image/x-icon" href="img/elder.ico" />
  <link rel="stylesheet" href="/css/auth.css" />
    <link rel="stylesheet" href="/css/global.css" />
</head>

<body>
  <%- include('partials/loader') %>
    <div id="particles-js"></div>
    <div class="auth-container">
      <h1>Welcome to Elder</h1>

      <!-- Choice -->
      <% if (!showForm) { %>
        <div id="choice-box">
          <% } else { %>
            <div id="choice-box" style="display:none;">
              <% } %>
                <button onclick="showForm('login')">Login</button>
                <button onclick="showForm('register')">Register</button>
            </div>

            <!-- Login Form -->
            <div id="login-form" class="auth-form hidden">
              <h2>Login</h2>
              <% if (showForm==='login' && error) { %>
                <div class="error">
                  <%= error %>
                </div>
                <% } %>
                  <form action="/login" method="POST">
                    <input type="email" name="email" placeholder="Email" required />
                    <div class="password-wrapper">
                      <input type="password" name="password" placeholder="Password" required minlength="6" />
                      <span class="toggle-password" onclick="togglePassword(this)">O</span>
                    </div>
                    <button type="submit">Login</button>
                  </form>
                  <p class="toggle-link">Don't have an account?
                    <a href="#" onclick="showForm('register')">Register</a>
                  </p>
            </div>

            <!-- Register Form -->
            <div id="register-form" class="auth-form hidden">
              <h2>Register</h2>
              <% if (showForm==='register' && error) { %>
                <div class="error">
                  <%= error %>
                </div>
                <% } %>
                  <form action="/register" method="POST" onsubmit="return handleRegistration(this)">
                    <input type="text" name="fullname" placeholder="Full Name" required />
                    <input type="email" name="email" placeholder="Email" required />
                    <input type="date" id="dob" name="dob" required />
                    <input type="hidden" name="age" id="age" />
                    <input type="text" name="phone" placeholder="Contact Number" required pattern="[0-9]+"
                      title="Digits only" />
                    <input type="text" name="address" placeholder="Address" required />

                    <select name="gender" required>
                      <option value="" disabled selected>Select Gender</option>
                      <option value="Male">Male</option>
                      <option value="Female">Female</option>
                      <option value="Other">Other</option>
                    </select>

                    <div class="password-wrapper">
                      <input type="password" name="password" placeholder="Password" minlength="6" required />
                      <span class="toggle-password" onclick="togglePassword(this)">üëÅÔ∏è</span>
                    </div>
                    <button type="submit">Register</button>
                  </form>
                  <p class="toggle-link">Already have an account?
                    <a href="#" onclick="showForm('login')">Login</a>
                  </p>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
        <script src=/js/particle.js></script>
        <script src=/js/toggle.js></script>
        <script src=/js/auth.js></script>

</body>

</html>