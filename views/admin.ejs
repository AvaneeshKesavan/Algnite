<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="icon" type="image/x-icon" href="/img/elder.ico" />
    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/dashboard.css">
</head>

<body>
    <%- include('partials/header') %>

        <section class="dashboard">
            <h2>Admin Dashboard</h2>

            <div class="dashboard-section">
                <h3>Registered Users</h3>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Age</th>
                            <th>Gender</th>
                            <th>Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(u=> { %>
                            <tr>
                                <td>
                                    <%= u.id %>
                                </td>
                                <td>
                                    <%= u.fullname %>
                                </td>
                                <td>
                                    <%= u.email %>
                                </td>
                                <td>
                                    <%= u.phone %>
                                </td>
                                <td>
                                    <%= u.age %>
                                </td>
                                <td>
                                    <%= u.gender %>
                                </td>
                                <td>
                                    <%= u.address %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>

            <div class="dashboard-section">
                <h3>Bookings</h3>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Service</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Note</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% bookings.forEach(b=> { %>
                            <tr>
                                <td>
                                    <%= b.id %>
                                </td>
                                <td>
                                    <%= b.name %>
                                </td>
                                <td>
                                    <%= b.email %>
                                </td>
                                <td>
                                    <%= b.service %>
                                </td>
                                <td>
                                    <%= b.date %>
                                </td>
                                <td>
                                    <%= b.time %>
                                </td>
                                <td>
                                    <%= b.note %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>

            <div class="dashboard-section">
                <h3>Contact Messages</h3>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Subject</th>
                            <th>Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% contacts.forEach(c=> { %>
                            <tr>
                                <td>
                                    <%= c.id %>
                                </td>
                                <td>
                                    <%= c.name %>
                                </td>
                                <td>
                                    <%= c.email %>
                                </td>
                                <td>
                                    <%= c.subject %>
                                </td>
                                <td>
                                    <%= c.message %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </section>

        <%- include('partials/footer') %>
</body>

</html>